@model IEnumerable<Mystore.Models.Product>



<div class="container py-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        @foreach (var product in Model)
        {
            <div class="col mb-5">
                <div class="card h-100">
                    @if (product.Data != null && product.Data.Length > 0)
                    {
                        <img src="data:@product.ContentType;base64,@Convert.ToBase64String(product.Data)" width="100" height="100" />
                    } 
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">@product.Name</h5>
                            <!-- Product reviews (optional, if you want to add reviews)-->
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                            </div>
                            <!-- Product price-->
                            $@product.Price
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            <form asp-action="AddToCart" method="post">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <button type="submit" class="btn btn-outline-dark mt-auto">Add to cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
